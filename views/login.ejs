        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
<% } %>

<div class="box-welcome" id="heading">
    <h1>Welcome to TODO List!</h1>
</div>


<form action="/login" method="post">
    <div class="box">
        <div class="item">
            <input type="text" class="login-input" name="username" id="userName-login" placeholder="Enter Username" autocomplete="off">
        </div>
        <div class="item">
            <input type="password" class="login-input" name="password" id="password-login" placeholder="Enter Password" autocomplete="off">
        </div>
    </div>
    <div class="box-btn">
        <input type="submit" class="loginBtn" value="Login"> 
    </div>
</form>

<div class="box-social">
    <a href="/auth/google" class="social-button" id="google-connect"> <span>Connect with Google</span></a>
    <a href="/auth/facebook" class="social-button" id="facebook-connect"> <span>Connect with Facebook</span></a>
</div>


<form action="/register" method="get">
    <div class="box-btn">
        <p class="reg-text">Don't have account? Create one for free!</p>
        <input type="submit" class="loginBtn" value="Register"> 
    </div>
</form>


<%- include("footer") -%>